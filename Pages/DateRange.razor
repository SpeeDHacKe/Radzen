            <h4>Custom markup</h4>
            <div class="row">
                <div class="col-4">
                    <label>Produces:</label>
                    <KPDateRangePicker.DateRangePicker>
                        <PickerTemplate>
                            <div id="@context.ParentId" @onclick="context.Toggle" style="background: #fff; cursor: pointer; padding: 5px 10px; width: 250px; border: 1px solid #ccc;">
